@model HMS.Areas.Dashboard.ViewModels.BlogTypeActionModel

@if (Model != null)
{

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @if (Model.ID > 0)
                {
                    <span>Edit BLog Type</span>
                }
                else
                {
                    <span>Create BLog Type</span>
                }
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">

            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" name="Name" placeholder="Enter Accomodation Type Name" value="@Model.Name">

                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input class="form-control" name="Address" placeholder="Enter Address " value="@Model.Address">
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" name="Email" placeholder="Enter Email " value="@Model.Email">
                </div>

                <div class="form-group">
                    <label>Mobile</label>
                    <textarea class="form-control" name="Mobile" placeholder="Enter Accomodation Type Mobile">@Model.Mobile</textarea>
                </div>
            </form>

            <div class="errordiv">

            </div>


        </div>
        <div class="modal-footer">
            <button id="actionButton" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save</button>

            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
        </div>
    </div>
}



<script>
    $("#actionButton").click(function () {
        $.ajax({
                url: '@Url.Action("Action","BlogType")',
                type:'post',
                data: $("#actionForm").serialize()
            })
            .done(function (response) {
                if (response.Success) {
                    location.reload();
                }
                else {
                    $(".errordiv").html(response.Message);
                }
            });
    });
</script>