@model HMS.Areas.Dashboard.ViewModels.AccomodationPackageActionModel

@if (Model != null)
{

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                @if (Model.ID > 0)
                {
                    <span>Edit Accomodation Package</span>
                }
                else
                {
                    <span>Create Accomodation Package</span>
                }
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">

            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="form-group">
                    <label>Accomodation Type</label>
                    <select class="form-control" name="AccomodationTypeID">
                        @if (Model.AccomodationTypes != null)
                        {
                            foreach (var accomodationType in Model.AccomodationTypes)
                            {
                                <option value="@accomodationType.ID" @(accomodationType.ID == Model.AccomodationTypeID ? "Selected" : string.Empty)>
                                    @accomodationType.Name
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" name="Name" placeholder="Enter Accomodation Type Name" value="@Model.Name">
                </div>

                <div class="form-group">
                    <label>Fee per night</label>
                    <input class="form-control" name="FeePerNight" placeholder="Enter Accomodation Fee Per Night" value="@Model.FeePerNight">
                </div>

                <div class="form-group">
                    <label>No Of Rooms</label>
                    <input class="form-control" name="NoOfRoom" placeholder="Enter Accomodation No Of Room" value="@Model.NoOfRoom">
                </div>

                <div class="form-group">
                    <label>Pictures</label>
                    <input id="selectPictures" class="form-control" name="Pictures" type="file" multiple>
                </div>


            </form>

            <div class="errordiv">

            </div>


        </div>
        <div class="modal-footer">
            <button id="actionButton" class="btn btn-primary"><i class="fas fa-save mr-1"></i>Save</button>

            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
        </div>
    </div>
}

<script>

     $("#actionButton").click(function () {
         $.ajax({
             url: '@Url.Action("Action","AccomodationPackages")',
             type:'post',
             data: $("#actionForm").serialize()

        })
             .done(function (response) {
                 if (response.Success) {
                     location.reload();
                 }
                 else {

                     $(".errordiv").html(response.Message);
                 }
            });
     });



    //Upload Picture
   $("#selectPictures").change(function () {

        var pictures = this.files;

        var formData = new FormData();

        for (var i = 0; i < pictures.length; i++) {
            formData.append("Picture", pictures[i]);
        }

		$.ajax({
			url: '@Url.Action("UploadPictures", "Dashboard")',
            type: "post",
            data: formData,
            processData: false,
			contentType: false
		})
        .done(function (response) {
            debugger;
            });
    });



</script>